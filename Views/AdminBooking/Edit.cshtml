@model EditBooking

<h2>Edit item</h2>

@if (Model != null)
{
    <p>Current Time Booked: @Model.TimeBooked</p>
    <p>Current amount of customers: @Model.CustomerCount</p>
    <p>Current ID of Table: @Model.TableId</p>
}
else
{
    <p>No item found.</p>
}

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="TimeBooked">TimeBooked</label>
        <input asp-for="TimeBooked" class="form-control" />
        <span asp-validation-for="TimeBooked" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerCount">CustomerCount</label>
        <input asp-for="CustomerCount" class="form-control" />
        <span asp-validation-for="CustomerCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TableId">Table ID</label>
        <input asp-for="TableId" class="form-control" />
        <span asp-validation-for="TableId" class="text-danger"></span>
    </div>

    <!-- Hidden field for Id -->
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<form method="post" asp-action="Delete" asp-controller="AdminBooking" style="display:inline;" onsubmit="return confirmDelete();">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger" style="margin-top: 1rem">Delete</button>
</form>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this item?');
    }
</script>
