@model Login

<h2>Sign In</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="checkbox" asp-for="RememberMe" />
        <label asp-for="RememberMe">Remember me</label>
    </div>

    <button type="submit" class="btn btn-primary">Sign In</button>

    <div class="mt-3">
        <p>Don't have an account? <a asp-action="Register">Sign Up</a></p>
    </div>
</form>
